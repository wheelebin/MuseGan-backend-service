upstream app {
    server web:8000;
}

server {

    listen 80;

    location /results/{
        alias  /usr/share/nginx/html/results/;
        expires 1y;
        access_log off;
        add_header Cache-Control "public";
    }

    location / {
        proxy_pass http://app;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

}